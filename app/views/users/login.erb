<% if flash.has?(:message) %>
<p style="color:red;"><%= flash[:message] %> </p>
<% end %>
<h2>Please Login Below</h2>
<form action="/login" method="POST">
	<input type="text" name="username" placeholder="Username:" style="margin-bottom:4px;height:15px;width:160px;"><br/>
	<input type="password" name="password" placeholder="Password:" style="margin-bottom:4px;height:15px;width:160px;"><br/>
	<input type="submit" value="Log In" class="button">
</form><br>

<p>Don't have an account with us yet?</p>
<p>Please create an account!</p>
<a href="/signup" class="button">Sign Up!</a>
